#include "libft.h"

char	*ft_strdup(const char *s1)
{
	char			*ch;
	unsigned int	i;

	write(1, "0\n", 2);
	ch = (char*)malloc(sizeof(char) * (ft_strlen(s1) + 1));
	write(1, "1\n", 2);
	if (ch == NULL)
		return (NULL);
	write(1, "2\n", 2);
	i = 0;
	write(1, "3\n", 2);
	while (s1[i] != '\0')
	{
		write(1, "4\n", 2);
		ch[i] = s1[i];
		write(1, "5\n", 2);
		i++;
	}
	write(1, "6\n", 2);
	ch[i] = '\0';
	write(1, "7\n", 2);
	return (ch);
}
